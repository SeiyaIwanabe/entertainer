.CreateEventField
  .CreateEventField__outline
    = form_with(model: @event, url: tag_events_path(@event), local: true, id: "new-event") do |f|
      .top-area
        .create-item-1
          = f.label :event_name, "イベント名", class: "Form-label"
          = f.text_field :event_name,  maxlength: "50", class: "name-field"

      .middle-area
        .create-item-2
          = f.label :datetime, "開催日時", class: "Form-label"
          = f.date_field :datetime, class: 'form-control', class: "middle-field"

        .create-item-2
          = f.label :genre, "ジャンル", class: "Form-label"
          = f.select :genre, [ ["ダンス", "ダンス"], ["歌", "歌"], ["撮影モデル", "撮影モデル"], ["楽器演奏", "楽器演奏"], ["演技", "演技"], ["サロン・カットモデル", "サロン・カットモデル"], ["エキストラ", "エキストラ"], ["その他", "その他"] ], prompt: "募集ジャンルを選択してください", class: "middle-field"

      .bottom-area
        .create-item-3
          = f.label :prefecture, "開催場所（都道府県）", class: "Form-label"
          = f.select :prefecture, Event.prefectures.keys, {}, class: "place-field"

        .create-item-3
          = f.label :place, "開催場所（詳細）", class: "Form-label"
          = f.text_field :place,  maxlength: "30", class: "place-field"
      
      -# .tag-area
      -#   .create-item-4
      -#     = f.label :tag_list, "タグ付け", class: "Form-label"
      -#     = f.text_field :tag_list, value: @event.tag_list.join(','), class: "tag-form"
      
      .create-item-5
        = f.label :detail, "イベント詳細説明", class: "Form-label"
        = f.text_area :detail, autofocus: true, autocomplete: "detail", class: "detail-area"
      
      .create-btn-field
        = f.submit "次へ", class: "create-btn"
      