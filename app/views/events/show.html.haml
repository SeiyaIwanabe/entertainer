.ShowEventField
  .ShowEventField__outline
    .EventHostArea
      %p.explanation
        主催者
      - if @recruiter.icon?
        = image_tag @rectuiter.icon.url, class: "recruiter-icon"
      - else
        = icon("fas", "user", class: "recruiter-icon")
      %p.recruiter-name
        = @recruiter.nickname
      .favorite-area
        - if @event.favorited_by?(current_user)
          %p.favorite-heading
            保存をキャンセル
          = link_to event_favorites_path(@event), method: :delete, class: "favorite-link" do
            = icon("fas", "star", class: "favorite-icon")
        - else
          %p.favorite-heading
            イベントを保存
          = link_to event_favorites_path(@event), method: :post, class: "favorite-link" do
            = icon("far", "star", class: "favorite-icon")
    .EventImageArea
      .EventImageArea__info
        .EventImageArea__info--date
          = @event.datetime.strftime("%Y年%-m月%-d日")
        .EventImageArea__info--name
          = @event.event_name
    = render partial: "modules/event-show-tab"
        


    
