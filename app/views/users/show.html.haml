= render partial: 'modules/header'

.TopIntroduction
  - if @user.icon?
    = image_tag @user.icon.url, class: "user-circle"
  - else
    = icon("fas", "user", class: "user-circle")
  .TopIntroduction__inner
    %p.user-name
      = @user.nickname
    %p.user-introduction
      - if @user.introduction?
        = @user.introduction
      - else
        最高のエンターテイメントを提供します。
  
  .Edit-link
    = link_to 

     
  