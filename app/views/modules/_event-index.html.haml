.EventField
  .search-area
    = search_form_for @search, url: search_events_path do |f|
      = f.text_field :genre_cont, placeholder: 'ジャンルで検索', class: "search-form" do
        = icon("fas", "user", class: 'search-icon')
      = f.submit ("イベントを検索") , class: 'search-btn', class: "search-btn"
  
  .tag-field
    - @tags.each do |tag|
      = link_to "#{tag.name}(#{tag.taggings_count})", events_path(tag_name: tag.name), class: "text-white"

  .EventField__outline
    - @events.each do |event|
      = link_to(event_path(event.id), class: "event-show-btn") do
        .EventInfo
          .EventInfo__prefecture
            = event.prefecture
          .EventInfo__main
            %p.event-name
              = event.event_name
            .EventHost--Area
              %p.host
                主催者：
              %p.host-name
                = event.recruiter.nickname
            %p.enter-judge
              申し込み可能です！
    .pagination-area
      = paginate @events